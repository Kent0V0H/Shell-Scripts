#!/bin/bash

echo -ne "\033]0;*** GPG ***\007"

function run
{
	clear

	echo -n "Enter your file name: "
	read resp0

	echo -n "Encrypt (0); Decrypt (1): "
	read resp1

	if [ "$resp1" = "0" ]; then
		gpg -c $resp0
	elif [ "$resp1" = "1" ]; then
		gpg $resp0
	else
		echo "Invalid entry!"
	fi
}

run

resp2="y"

while [ "$resp2" = "y" ]; do
	echo -n "Run again(y/n)? "
	read resp2
	if [ "$resp2" = "y" ]; then run; fi
done

rm -rf ~/.local/share/Trash/*